<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Collections</title>
    <link rel="stylesheet" href="style.css">
   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <!-- Section to display saved collections -->
    <div id="collection-section">
        <h2>My Collections</h2>
        <ul id="collection-list">
            <!-- Collections will be added here dynamically -->
        </ul>
        <!-- Updated link to navigate back to the editor page -->
        <a href="/">
            <button id="back-to-editor-btn" type="button"><i class="fa-solid fa-left-long"></i></button>
        </a>
    </div>
     

    <!-- Section to preview collection content -->
    <div id="editor-section" style="display: none;">
        <h2> HTML <i class="fa-solid fa-code"></i>, CSS <i class="fa-brands fa-css3-alt"></i>, and JS <i class="fa-brands fa-square-js"></i></h2>
        <div id="tabs">
            <button id="html-tab" class="tab active"><i class="fa-solid fa-code"></i></button>
            <button id="css-tab" class="tab"><i class="fa-brands fa-css3-alt"></i></button>
            <button id="js-tab" class="tab"><i class="fa-brands fa-square-js"></i></button>
        </div>
        <textarea id="html-code" class="code-area" placeholder="HTML code here"></textarea>
        <textarea id="css-code" class="code-area hidden" placeholder="CSS code here"></textarea>
        <textarea id="js-code" class="code-area hidden" placeholder="JavaScript code here"></textarea>
        
        <button type="button" id="export-btn"><i class="fa-solid fa-file-export"></i> Export</button>
        <button type="button" id="back-to-collections-btn" onclick="showCollections()"><i class="fa-solid fa-left-long"></i></button>
    </div>
    
    <!-- Add this iframe to display output -->
    <div id="output-section" style="display: none;">
        <h1> Output</h1>
        <iframe id="result" width="100%" height="500px"></iframe>
        <button type="button" id="back-to-collections-btn-output" onclick="showCollections()"><i class="fa-solid fa-left-long"></i></button>
    </div>

    <script src="collections.js"></script>
</body>
</html>
